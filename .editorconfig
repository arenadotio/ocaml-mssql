# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# PEP8 says use 4-space indent
[*.py]
indent_size = 4

# Makefiles only support tab indents
[Makefile]
indent_style = tab
